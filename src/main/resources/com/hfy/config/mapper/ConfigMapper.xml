<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.hfy.config.mapper.ConfigMapper" ><!-- Result Map--><resultMap id="config" type="com.hfy.config.entity.Config" >	<result column="id" property="id"/>	<result column="code" property="code"/><result column="value" property="value"/><result column="remark" property="remark"/><result column="create_date" property="createDate"/><result column="create_by" property="createBy"/><result column="update_date" property="updateDate"/><result column="update_by" property="updateBy"/></resultMap><!-- f_order table all fields --><sql id="columnList" >	bc.id,	 bc.code, bc.value, bc.remark, bc.create_date, bc.create_by, bc.update_date, bc.update_by</sql><!-- 查询条件 --><sql id="whereClause">where 1=1<trim  suffixOverrides="," >	<if test="id != null" >	    and bc.id = #{id}	</if>	<if test="code != null" >and  bc.code = #{code}</if><if test="value != null" >and  bc.value = #{value}</if><if test="remark != null" >and  bc.remark = #{remark}</if><if test="createDate != null" >and  bc.create_date = NOW()</if><if test="createBy != null" >and  bc.create_by = #{createBy}</if><if test="updateDate != null" >and  bc.update_date = NOW()</if><if test="updateBy != null" >and  bc.update_by = #{updateBy}</if></trim></sql><!-- 模糊查询条件 --><sql id="whereLikeClause">where 1=1<trim  suffixOverrides="," >	<if test="id != null" >	    and bc.id = #{id}	</if>													 			<if test="code != null" >and  UPPER(bc.code) LIKE   UPPER(CONCAT(CONCAT('%',#{code}),'%'))</if><if test="value != null" >and  UPPER(bc.value) LIKE   UPPER(CONCAT(CONCAT('%',#{value}),'%'))</if><if test="remark != null" >and  UPPER(bc.remark) LIKE   UPPER(CONCAT(CONCAT('%',#{remark}),'%'))</if><if test="createDate != null" >and  UPPER(bc.create_date) LIKE   UPPER(CONCAT(CONCAT('%',NOW()),'%'))</if><if test="createBy != null" >and  UPPER(bc.create_by) LIKE   UPPER(CONCAT(CONCAT('%',#{createBy}),'%'))</if><if test="updateDate != null" >and  UPPER(bc.update_date) LIKE   UPPER(CONCAT(CONCAT('%',NOW()),'%'))</if><if test="updateBy != null" >and  UPPER(bc.update_by) LIKE   UPPER(CONCAT(CONCAT('%',#{updateBy}),'%'))</if></trim></sql><!-- 插入记录 --><insert id="insert" parameterType="Object" useGeneratedKeys="true" keyProperty="id">  insert into base_config (code,value,remark,create_date,create_by,update_date,update_by)  values(#{code,jdbcType=VARCHAR},#{value,jdbcType=VARCHAR},#{remark,jdbcType=VARCHAR},NOW(),#{createBy,jdbcType=VARCHAR},NOW(),#{updateBy,jdbcType=VARCHAR})</insert><!-- 批量插入 --><insert id="insertBatch" parameterType="java.util.List">  	insert into base_config (code,value,remark,create_date,create_by,update_date,update_by)        values     <foreach collection="list" item="item" index="index"  separator="," >           (        #{item.code,jdbcType=VARCHAR},#{item.value,jdbcType=VARCHAR},#{item.remark,jdbcType=VARCHAR},NOW(),#{item.createBy,jdbcType=VARCHAR},NOW(),#{item.updateBy,jdbcType=VARCHAR}          )      </foreach></insert><!-- 修改记录--><update id="update" parameterType="Object" >	update base_config set 	<trim  suffixOverrides="," >	<if test="code != null ">code=#{code},</if><if test="value != null ">value=#{value},</if><if test="remark != null ">remark=#{remark},</if>update_date=NOW(),update_by=#{updateBy},	</trim> where id=#{id} </update><!-- 批量修改 --><update id="updateBatch" parameterType="java.util.List">       <foreach collection="list" item="item" index="index" open="" close="" separator=";">         UPDATE base_config         <set>              <if test="item.code != null ">code=#{item.code},</if><if test="item.value != null ">value=#{item.value},</if><if test="item.remark != null ">remark=#{item.remark},</if>update_date=NOW(),update_by=#{item.updateBy},       </set>         WHERE id = item.id=#{id}      </foreach>  </update>  <!-- 删除记录 --><delete id="deleteById" parameterType="Object">	delete from base_config where id = #{id}</delete><delete id="deleteByParam" parameterType="Object"></delete><delete id="deleteByEntity" parameterType="Object"></delete><!-- 批量删除 --><delete id="deleteBatch" parameterType="java.util.List">	delete from base_config where id in	<foreach item="item" index="index" collection="list" open="(" separator="," close=")">          #{item}      </foreach></delete><!-- 按code查询value --><select id="getValue"  resultType="string" parameterType="Object">	select value 	from base_config  bc	where  bu.code = #{code}</select><!-- 查询单个实体 --><select id="getEntityById"  resultMap="config" parameterType="Object">	select <include refid="columnList" /> 	from base_config  bc	where  bu.id = #{id}</select><select id="getEntityByParam"  resultMap="config" parameterType="Object">	select <include refid="columnList" /> 	from base_config bc	<include refid="whereClause"/></select><select id="getEntity"  resultMap="config" parameterType="Object">	select <include refid="columnList" /> 	from base_config bc	<include refid="whereClause"/></select><!-- 列表总数--><select id="count" resultType="java.lang.Long"  parameterType="Object">	select count(1) 	from base_config bc	<include refid="whereClause"/></select><!-- 查询列表  返回List<ENTITY>--><select id="queryList" resultMap="config"  parameterType="Object">	select 	<include refid="columnList"/>	from base_config bc	<include refid="whereClause"/></select><!-- 查询列表  返回List<Map<String,Object>>--><select id="queryListMap" resultType="java.util.HashMap"  parameterType="Object">	select 	<include refid="columnList"/>	from base_config bc	<include refid="whereClause"/></select><!-- 模糊查询列表  返回List<ENTITY>--><select id="queryListByLike" resultMap="config"  parameterType="Object">	select 	<include refid="columnList"/>	from base_config bc	<include refid="whereLikeClause"/></select><!-- 模糊查询列表  返回List<Map<String,Object>>--><select id="queryListMapByLike" resultType="java.util.HashMap"  parameterType="Object">	select 	<include refid="columnList"/>	from base_config bc	<include refid="whereLikeClause"/></select></mapper>